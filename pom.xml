<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>ome</groupId>
  <version>5.3.0-m2</version>
  <artifactId>dependency_copy</artifactId>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>bio-formats_plugins</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  
  <properties>
  	<fiji.home>/Applications/Fiji.app</fiji.home>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>${fiji.home}/plugins</directory>
              <includes>
                <include>bio-formats*</include>
              </includes>
            </fileset>
            <fileset>
              <directory>${fiji.home}/jars/bio-formats</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>copy-plugin</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${fiji.home}/plugins</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>ome,org.openmicroscopy</includeGroupIds>
              <excludeArtifactIds>bio-formats_plugins</excludeArtifactIds>
              <outputDirectory>${fiji.home}/jars/bio-formats</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
    
  <repositories>
    <repository>
      <id>ome</id>
      <name>Bio-Formats Repo</name>
      <url>http://artifacts.openmicroscopy.org/artifactory/maven</url>
    </repository>
  </repositories>
</project>